define monx_x v0
define monx_y v1
define mony_x v2
define mony_y v3
define oldx_x v4
define oldx_y v5
define oldy_x v6
define oldy_y v7
define frog_x v8
define frog_y v9
define old_frog_x va
define old_frog_y vb
define key vc
define temp   VE


      ld monx_x,1
      ld monx_y,8
      ld I,monster1
      drw monx_x,monx_y,4
      ld temp,1

      ld mony_x,56
      ld mony_y,16
      ld I,monster2
      drw mony_x,mony_y,4

      ld frog_x,26
      ld frog_y,26
      ld i, frog_graph
      drw frog_x,frog_y,4

main_loop:
    call monster_move
    call check_input
    call draw
    jp main_loop

monster_move:
      ld oldx_x,monx_x
      ld oldy_x,mony_x
      add monx_x,1



      ld oldx_y,monx_y
      ld oldy_y,mony_y
      sub mony_x,temp
      sub mony_x,temp
 
      ld I,monster1
      drw oldx_x,oldx_y,4
      drw monx_x,monx_y,4



      ld I,monster2
      drw oldy_x,oldy_y,4
      drw mony_x,mony_y,4
      ret

check_input:
    
    ld old_frog_x,frog_x
    ld old_frog_y,frog_y

    ld key,5
    sknp key
    jp up
    
    ld key,7
    sknp key
    jp down
    
    ld key,8
    sknp key
    jp left
    
    ld key,9
    sknp key
    jp right
    ret

up:
    se frog_y,0
    sub frog_y,temp
    ret
down:
    se frog_y,28
    add frog_y,temp
    ret
left:
    se frog_x,0
    sub frog_x,temp
    ret
right:
    se frog_x,56
    add frog_x,temp
    ret

draw:  
    ld i,frog_graph
    drw old_frog_x,old_frog_y,4
    drw frog_x,frog_y,4
    ret



monster1:
      db 24,60,24,0

monster2:
      db 189,165,255,60


frog_graph:
        db 54,62,127,36
          
